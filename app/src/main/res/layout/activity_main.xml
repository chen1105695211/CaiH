<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#000"
        android:layout_weight="1">
        <TextView
            android:id="@+id/main_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textStyle="bold"
            android:textColor="#fff"
            android:text="课程中心"
            android:textSize="25sp"/>
        <ImageView
            android:id="@+id/main_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"

            android:layout_centerVertical="true"
            android:layout_marginRight="20dp" />
    </RelativeLayout>

   <FrameLayout
       android:id="@+id/main_frag"
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_weight="9"></FrameLayout>


        <RadioGroup
            android:id="@+id/rg"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >

            <RadioButton
                android:id="@+id/kczx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:layout_weight="1"
                android:background="@drawable/bt_kecheng_selector"
                android:checked="true"
                android:layout_marginLeft="10px"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="20px"/>
            <RadioButton
                android:id="@+id/chtk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:background="@drawable/bt_caihua_selector"
                android:layout_marginLeft="70px"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="20px"
                android:layout_weight="1"
                />
            <RadioButton
                android:id="@+id/xxzx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:background="@drawable/bt_xuexi_selector"
                android:layout_marginLeft="66px"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="20px"
                android:layout_weight="1"
               />
            <RadioButton
                android:id="@+id/grzx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:background="@drawable/bt_geren_selector"
                android:layout_marginLeft="66px"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"

                />

        </RadioGroup>




</LinearLayout>
